            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tirafrase_card_3"
            app:layout_constraintEnd_toStartOf="@+id/tirafrase_card_5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tirafrase_card_3"
