<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    >

    <ScrollView
        android:id="@+id/scroll_categorias"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/round_button_categorias"
        android:scrollbars="none"
        >

        <GridLayout
            android:id="@+id/grid_categorias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="">

            <ImageView
                android:id="@+id/categoria_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />

            <ImageView
                android:id="@+id/categoria_13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                android:layout_gravity="center_horizontal"
                />
        </GridLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/scroll_pictogramas"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignTop="@+id/scroll_categorias"
        android:layout_toRightOf="@+id/scroll_categorias"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/round_button_pictogramas"
        android:scrollbars="none"
        >

        <GridLayout
            android:id="@+id/grid_pictogramas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="7"
            android:layout_gravity="center_horizontal"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            >

            <ImageView
                android:id="@+id/pictograma_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                />
            <ImageView
                android:id="@+id/pictograma_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                />
            <ImageView
                android:id="@+id/pictograma_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                />
            <ImageView
                android:id="@+id/pictograma_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:tint="@color/colorNaranjo"
                />

        </GridLayout>

    </ScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/round_button_respuesta_pictos"
        android:layout_below="@+id/scroll_pictogramas"
        android:layout_alignLeft="@+id/scroll_pictogramas"
        android:layout_toRightOf="@+id/scroll_categorias"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" />

    </HorizontalScrollView>

</RelativeLayout>